{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Grav Shortcode",
  "scopeName": "text.shortcode",
  "fileTypes": [],
  "patterns": [
    { "include": "#shortcode-self-closing" },
    { "include": "#shortcode-block" },
    { "include": "#shortcode-close" }
  ],
  "repository": {
    "shortcode-self-closing": {
      "comment": "Self-closing shortcode like [hr/] or [icon name=\"star\"/]",
      "name": "meta.tag.shortcode.self-closing",
      "match": "\\[(\\w[\\w-]*)([^\\]]*)/\\]",
      "captures": {
        "1": { "name": "entity.name.tag.shortcode" },
        "2": { "patterns": [{ "include": "#attributes" }] }
      }
    },
    "shortcode-block": {
      "comment": "Opening shortcode tag like [codesh lang=\"php\"]",
      "name": "meta.tag.shortcode.open",
      "match": "\\[(\\w[\\w-]*)([^\\]/]*)\\]",
      "captures": {
        "1": { "name": "entity.name.tag.shortcode" },
        "2": { "patterns": [{ "include": "#attributes" }] }
      }
    },
    "shortcode-close": {
      "comment": "Closing shortcode tag like [/codesh]",
      "name": "meta.tag.shortcode.close",
      "match": "\\[/(\\w[\\w-]*)\\]",
      "captures": {
        "1": { "name": "entity.name.tag.shortcode" }
      }
    },
    "attributes": {
      "patterns": [
        {
          "comment": "Attribute with double-quoted value",
          "match": "(\\w[\\w-]*)\\s*(=)\\s*(\"[^\"]*\")",
          "captures": {
            "1": { "name": "entity.other.attribute-name.shortcode" },
            "2": { "name": "punctuation.separator.key-value.shortcode" },
            "3": { "name": "string.quoted.double.shortcode" }
          }
        },
        {
          "comment": "Attribute with single-quoted value",
          "match": "(\\w[\\w-]*)\\s*(=)\\s*('[^']*')",
          "captures": {
            "1": { "name": "entity.other.attribute-name.shortcode" },
            "2": { "name": "punctuation.separator.key-value.shortcode" },
            "3": { "name": "string.quoted.single.shortcode" }
          }
        },
        {
          "comment": "Boolean/valueless attribute",
          "match": "\\s+(\\w[\\w-]*)(?=\\s|/|\\])",
          "captures": {
            "1": { "name": "entity.other.attribute-name.shortcode" }
          }
        }
      ]
    }
  },
  "_metadata": {
    "version": "1.0.0",
    "description": "TextMate grammar for Grav CMS shortcodes (BBCode-like syntax)",
    "author": "Helios Theme",
    "license": "MIT"
  }
}
